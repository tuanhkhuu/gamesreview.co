<div class="mx-auto max-w-md mt-16">
  <% if notice %>
    <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded mb-4">
      <%= notice %>
    </div>
  <% end %>
  
  <% if alert %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded mb-4">
      <%= alert %>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8">
    <h1 class="text-3xl font-bold text-center mb-2">Welcome to Games Review</h1>
    <p class="text-gray-600 text-center mb-8">Sign in to rate and review your favorite games</p>

    <div class="space-y-3">
      <!-- Google Sign In -->
      <%= button_to "/auth/google_oauth2", 
        method: :post,
        class: "w-full flex items-center justify-center gap-3 bg-white border border-gray-300 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-50 transition duration-200 font-medium",
        data: { turbo: false } do %>
        <%= render 'oauth_identities/provider_icon', provider: 'google_oauth2' %>
        <span>Continue with Google</span>
      <% end %>

      <!-- Twitter Sign In -->
      <%= button_to "/auth/twitter2", 
        method: :post,
        class: "w-full flex items-center justify-center gap-3 bg-black text-white px-6 py-3 rounded-lg hover:bg-gray-800 transition duration-200 font-medium",
        data: { turbo: false } do %>
        <%= render 'oauth_identities/provider_icon', provider: 'twitter2' %>
        <span>Continue with Twitter</span>
      <% end %>

      <!-- Facebook Sign In -->
      <%= button_to "/auth/facebook", 
        method: :post,
        class: "w-full flex items-center justify-center gap-3 bg-[#1877F2] text-white px-6 py-3 rounded-lg hover:bg-[#166FE5] transition duration-200 font-medium",
        data: { turbo: false } do %>
        <%= render 'oauth_identities/provider_icon', provider: 'facebook' %>
        <span>Continue with Facebook</span>
      <% end %>
    </div>

    <div class="mt-8 text-center text-sm text-gray-600">
      <p>
        By signing in, you agree to our 
        <%= link_to "Terms of Service", terms_path, class: "text-blue-600 hover:underline" %> and 
        <%= link_to "Privacy Policy", privacy_path, class: "text-blue-600 hover:underline" %>
      </p>
    </div>
  </div>
</div>
