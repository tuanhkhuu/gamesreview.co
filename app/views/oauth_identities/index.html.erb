<div class="mx-auto max-w-2xl mt-8">
  <% if notice %>
    <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded mb-4">
      <%= notice %>
    </div>
  <% end %>
  
  <% if alert %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded mb-4">
      <%= alert %>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8">
    <h1 class="text-2xl font-bold mb-6">Connected Accounts</h1>
    
    <p class="text-gray-600 mb-6">
      Manage your OAuth provider connections. You can sign in with any connected account.
    </p>

    <!-- Connected Providers -->
    <div class="space-y-4 mb-8">
      <h2 class="text-lg font-semibold text-gray-700">Your Connected Accounts</h2>
      
      <% if @oauth_identities.any? %>
        <% @oauth_identities.each do |identity| %>
          <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg">
            <div class="flex items-center gap-3">
              <%= render partial: "oauth_identities/provider_icon", locals: { provider: identity.provider } %>
              <div>
                <p class="font-medium text-gray-900">
                  <%= provider_name(identity.provider) %>
                </p>
                <p class="text-sm text-gray-500">
                  Connected <%= time_ago_in_words(identity.created_at) %> ago
                </p>
              </div>
            </div>
            
            <% if @oauth_identities.count > 1 %>
              <%= button_to "Disconnect", 
                oauth_identity_path(identity), 
                method: :delete,
                class: "px-4 py-2 text-sm text-red-600 hover:text-red-800 font-medium",
                data: { turbo_confirm: "Are you sure you want to disconnect #{provider_name(identity.provider)}?" } %>
            <% else %>
              <span class="text-sm text-gray-400 italic">Last connection</span>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-500">No connected accounts found.</p>
      <% end %>
    </div>

    <!-- Available Providers to Connect -->
    <% if @available_providers.any? %>
      <div class="space-y-4 border-t pt-6">
        <h2 class="text-lg font-semibold text-gray-700">Connect More Accounts</h2>
        <p class="text-sm text-gray-600 mb-4">
          Add more sign-in options to your account for convenience.
        </p>
        
        <div class="space-y-3">
          <% @available_providers.each do |provider| %>
            <%= button_to "/auth/#{provider}", 
              method: :post,
              class: provider_button_class(provider),
              data: { turbo: false } do %>
              <%= render partial: "oauth_identities/provider_icon", locals: { provider: provider } %>
              <span>Connect <%= provider_name(provider) %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Danger Zone: Account Deletion -->
  <div class="mt-8 bg-white shadow-md rounded-lg px-8 pt-6 pb-8 border-2 border-red-200">
    <h2 class="text-lg font-semibold text-red-700 mb-3">⚠️ Danger Zone</h2>
    <p class="text-gray-600 mb-4">
      Once you delete your account, there is no going back. This action will permanently delete your account and all associated data.
    </p>
    
    <details class="mb-4">
      <summary class="cursor-pointer text-sm font-medium text-gray-700 hover:text-gray-900">
        What will be deleted?
      </summary>
      <ul class="mt-2 ml-4 text-sm text-gray-600 list-disc space-y-1">
        <li>Your user profile and email address</li>
        <li>All connected OAuth accounts (Google)</li>
        <li>All active sessions across all devices</li>
        <li>Any other data associated with your account</li>
      </ul>
    </details>

    <%= button_to "Delete My Account Permanently", 
      account_path, 
      method: :delete,
      class: "w-full sm:w-auto px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors",
      data: { 
        turbo_confirm: "⚠️ WARNING: This action cannot be undone!\n\nAre you absolutely sure you want to delete your account and all associated data?\n\nType 'DELETE' in your mind and click OK to confirm." 
      } %>
  </div>

  <div class="mt-6 text-center">
    <%= link_to "← Back to Home", root_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>
